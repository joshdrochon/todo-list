<style media="screen">

  li{
    list-style-type: none;
    background-color: lightgreen;
    display: inline;
    padding: 10px;
    font-family: helvetica;
    border-radius: 10px;
  }

</style>


<!--each new list item is an instance of the item class-->

<h1>To Do List</h1>
<ul>
  @foreach (var item in Model)
  {
    <li><a href='/items/@item.GetId()'>@item.GetDescription()</a></li>
  }
</ul>
<p><a href="/items/new">Add an item</a></p>
<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>
